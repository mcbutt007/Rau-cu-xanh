<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nhom12.rau_cu_xanh">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalTest">

        <activity android:name=".LaunchScreen" android:theme="@style/LaunchTheme" android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.nhom12.rau_cu_xanh.LoginActivity" android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name="com.nhom12.rau_cu_xanh.MainActivity" android:screenOrientation="portrait"
            android:exported="true">
        </activity>
    </application>

</manifest>